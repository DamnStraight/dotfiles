{
  // General config & behavior
  "explorer.compactFolders": false,
  "telemetry.telemetryLevel": "off",
  "editor.fontLigatures": true,
  "editor.letterSpacing": 0.1,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.fontFamily": "'MonoLisa Light', 'BerkeleyMono Nerd Font Mono', 'Operator Mono Lig'",
  "editor.fontSize": 16,
  // Appearance
  "workbench.colorTheme": "Gruvchad",
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#272822",
    "editorInlayHint.foreground": "#fdfff1",
    "statusBar.background": "#1A1A1A",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238",
    "[Monokai Classic]": {
      "editorInlayHint.foreground": "#6E7066"
    },
    "editorBracketHighlight.foreground1": "#5caeef",
    "editorBracketHighlight.foreground2": "#dfb976",
    "editorBracketHighlight.foreground3": "#a88cb1",
    "editorBracketHighlight.foreground4": "#4fb1bc",
    "editorBracketHighlight.foreground5": "#97c26c",
    "editorBracketHighlight.foreground6": "#abb2c0",
    "editorBracketPairGuide.activeBackground1": "#5caeef",
    "editorBracketPairGuide.activeBackground2": "#dfb976",
    "editorBracketPairGuide.activeBackground3": "#a88cb1",
    "editorBracketPairGuide.activeBackground4": "#4fb1bc",
    "editorBracketPairGuide.activeBackground5": "#97c26c",
    "editorBracketPairGuide.activeBackground6": "#abb2c0",
    "editorBracketHighlight.unexpectedBracket.foreground": "#db6165"
  },
  "workbench.iconTheme": "Monokai Pro Icons",
  // Language rules & config
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "[javascript]": {
    "editor.rulers": [80, 100],
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.rulers": [80, 100],
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.rulers": [80, 100],
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.rulers": [80, 100],
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Better Comments extension
  // Monokai Colors - TODO Update to Gruvchad
  "better-comments.tags": [
    {
      "tag": "FIXME",
      "color": "#ff6188",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "!",
      "color": "#ff6188",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "REVIEW",
      "color": "#78dce8",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#78dce8",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#908e8f",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "TODO",
      "color": "#ffd866",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "NOTE",
      "color": "#a9dc76",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#a9dc76",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],
  // Comment 6 extension
  "comment.fancy": false,
  "comment.ornament": "âœ£",
  // background extension
  "background.enabled": true,
  "background.fullscreen": {
    "images": [
      "file:///C:/Users/Steven/Documents/Git/dotfiles/kirino_dark.png",
    ],
    "opacity": 0.91,
    "size": "cover",
    "position": "center",
    "interval": 60
  },
  "window.commandCenter": false,
  "editor.guides.bracketPairs" : true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.highlightActiveIndentation" : true,
  "editor.guides.bracketPairsHorizontal" : "active",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "explorer.fileNesting.patterns": {
    "Cargo.toml": "Cargo.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
}
